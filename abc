#include<stdio.h>
int main(){
  int arr[5]={1,2,3,4,5};
  int y;
  printf("Enter the value to be inserted");
  scanf("%d",&y);
  for(int i=0;i<6;i++){
    if(i==5){
      arr[i]=y;
    }
  }
  arr[1]=100;
  int pos;
  printf("Enter position of the element to be deleted:");
  scanf("%d",&pos);
  for(int i=pos;i<5;i++){
    arr[i]=arr[i+1];
  }
  int x;
  printf("Enter value to be searched:");
  scanf("%d",&x);
  for(int i=0;i<5;i++){
    if(arr[i]==x){
      printf("Position in array:%d\n",i);
    }
  }
  printf("After all changes\n");
  for(int i=0;i<5;i++){
    printf("%d ",arr[i]);
  }
}
